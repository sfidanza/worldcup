.club {
	background-image: url(img/clubs-spritesheet.png);
	background-position-x: left;
	background-position-y: 20px; /* to detect missing clubs */
	background-repeat: no-repeat;
	display: inline-block; /* fix Chrome when using sprite */
	line-height: 18px; /* fix Chrome when using sprite */
	padding-left: 20px;
    white-space: nowrap;
}
.left .club, .club.left {
	background-position-x: right;
	padding-left: 0;
	padding-right: 20px;
}

{{#sprites}}
.club-{{fifa name}} { background-position-y: {{adjustY offset_y}}px; }
{{/sprites}}
