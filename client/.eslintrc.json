{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-extra-bind": "error",
    "no-shadow": "error",
    "no-var": "error",
    "prefer-const": "error",
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ]
  }
}