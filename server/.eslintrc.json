{
    "extends": "eslint:recommended",
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "ignorePatterns": ["/src/business/history.js"], // pending import assertions being supported by eslint: https://v8.dev/features/import-assertions
    "rules": {
        "no-extra-bind": "error",
        "no-shadow": "error",
        "no-var": "error",
        "prefer-const": "error",
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ]
    }
}
